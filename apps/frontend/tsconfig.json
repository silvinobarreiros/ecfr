{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/actions/*": ["src/actions/*"],
      "@components/*": ["src/components/*"],
      "@routes/*": ["./src/routes/*"],
      "@sections/*": ["./src/sections/*"],
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../api/src/utils/uuid.ts"
, "server.mts"  ],
  "exclude": ["node_modules"]
}
